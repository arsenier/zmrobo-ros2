
<launch>
  <arg name="mapping_mode"  default="gmapping" doc="opt: gmapping, hector,cartographer,karto"/>
  
  <!-- 开启机器人底层相关节点  -->
  <include file="$(find zmrobo_init)/launch/zmrobo_init.launch" />

  <!-- turn on lidar开启思岚雷达  -->
  <include file="$(find lslidar_x10_driver)/launch/zmrobo_laser.launch" />

  <!-- 启动APP一键保存地图功能  -->
  <node pkg="world_canvas_msgs" type="save" name="save_map" />

  <!-- 开启gmapping建图算法  -->
  <group if="$(eval mapping_mode == 'gmapping')">
  <include file="$(find zmrobo_init)/launch/include/algorithm_gmapping.launch" />
  </group>
  <!-- 开启hector建图算法  -->
  <group if="$(eval mapping_mode == 'hector')">
  <include file="$(find zmrobo_init)/launch/include/algorithm_hector.launch" />
  </group>  
   <!-- 开启karto建图算法  -->
  <group if="$(eval mapping_mode == 'karto')">
  <include file="$(find zmrobo_init)/launch/include/algorithm_karto.launch" />
  </group>  
   <!-- 开启cartographer建图算法  -->
  <group if="$(eval mapping_mode == 'cartographer')">
  <!--这个功能包的路径是：/opt/ros/melodic/share/cartographer_ros-->
  <include file="$(find cartographer_ros)/launch/demo_revo_lds.launch" />
  </group>  
  <node name="rviz2" pkg="rviz" type="rviz" args="-d $(find zmrobo_init)/config/zmrobo.rviz" required="true" />

  <node pkg="zmrobo_move" type="zmrobo_move.py" name="zmrobo_teleop_keyboard"  output="screen" />

</launch>
